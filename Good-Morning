<body>
  <div class="container">
    <h2>💖Semangat Pagi💖</h2>
    <form id="morningForm">
      <label for="message">Pesan Manis Kamu:</label><br/>
      <textarea id="message" name="message" required></textarea><br/><br/>

      <label for="readiness">Seberapa siap kamu hari ini?</label><br/>
      <div class="slider">
        <input type="range" id="readiness" name="readiness" min="0" max="10" value="5" />
        <div class="emoji" id="emoji">😊</div>
      </div>

      <button type="submit">💌 Kirim ke Email</button>
    </form>
    <div class="message" id="confirmation"></div>
  </div>

  <!-- EmailJS CDN -->
  <script src="https://cdn.emailjs.com/dist/email.min.js"></script>
  <script>
    emailjs.init("-LO1Sfl7m7q1w10ut"); // Ganti dengan PUBLIC KEY kamu

    const emoji = document.getElementById("emoji");
    const slider = document.getElementById("readiness");

    const emojiMap = ["😴","😪","😕","😐","🙂","😊","😃","😄","😁","🤩","💪"];

    slider.addEventListener("input", () => {
      const val = parseInt(slider.value);
      emoji.textContent = emojiMap[val];
    });

    document.getElementById("morningForm").addEventListener("submit", function(e) {
      e.preventDefault();

      const message = document.getElementById("message").value;
      const readiness = document.getElementById("readiness").value;

      const templateParams = {
        user_message: message,
        readiness_level: readiness
      };

      emailjs.send("service_ba0r2o8", "template_ki93vbu", templateParams)
        .then(function(response) {
          document.getElementById("confirmation").textContent = "🎉 Pesanmu berhasil dikirim!";
        }, function(error) {
          document.getElementById("confirmation").textContent = "❌ Gagal mengirim pesan.";
          console.error("EmailJS Error:", error);
        });
    });
  </script>
</body>
